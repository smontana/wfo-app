doctype html
html
  head
    block head
      block title
        title Default title
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(href='public/stylesheets/photon-kit/css/photon.css', rel='stylesheet')
      link(href='public/stylesheets/c3.min.css', rel='stylesheet', type='text/css')
      link(href='public/stylesheets/myStyles.css', rel='stylesheet')
      //- script(type='text/javascript', src='public/js/sidebar.js')
      script(type='text/javascript', src='public/js/nav.js')

  body

    div.window
      header.toolbar.toolbar-header
        h1.title WorkForce Optimization Reporting

      div.window-content

        div.pane-group

          div.pane.pane-sm.sidebar

            div.sidebar-menu
              nav.nav-group
                h1.nav-group-title.text-center Menu

                div.sidebar-menu-items

                  #homepage(onclick="findAndOpenMatchingSection(homepage)")
                    button.nav-group-item.btn.btn-large.btn-default
                      span.icon.icon-home 
                        | Home

                  #interactions(onclick="findAndOpenMatchingSection(interactions)")
                    button.nav-group-item.btn.btn-large.btn-default
                      span.icon.icon-chart-area 
                        | Interactions

                  #attendance(onclick="findAndOpenMatchingSection(attendance)")
                    button.nav-group-item.btn.btn-large.btn-default
                      span.icon.icon-clock 
                        | Attendance

                  #productivity(onclick="findAndOpenMatchingSection(productivity)")
                    button.nav-group-item.btn.btn-large.btn-default
                      span.icon.icon-gauge 
                        | Productivity

                  #qpa(onclick="findAndOpenMatchingSection(qpa)")
                    button.nav-group-item.btn.btn-large.btn-default
                      span.icon.icon-trophy 
                        | QPA

          block content

    block scripts
        script(type='text/javascript', src='public/js/d3.min.js')
        script(type='text/javascript', src='public/js/c3.min.js')
        script(type='text/javascript', src='public/js/db.js')
