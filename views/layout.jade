doctype html
html
  head
    block head
      block title
        title Default title
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(href='public/stylesheets/photon-kit/css/photon.css', rel='stylesheet')
      link(href='public/stylesheets/c3.min.css', rel='stylesheet', type='text/css')
      link(href='public/stylesheets/myStyles.css', rel='stylesheet')

  body

    div.window
      header.toolbar.toolbar-header
        h1.title WorkForce Optimization Reporting

      div.window-content

        div.pane-group

          div.pane.pane-sm.sidebar

            div.sidebar-menu
              nav.nav-group
                h1.nav-group-title.text-center Menu

                div.sidebar-menu-items
                  button.nav-group-item.btn.btn-large.btn-default.active
                    span.icon.icon-home 
                      a(use xlink:href='views/templates/index.jade')
                        | Home

                  button.nav-group-item.btn.btn-large.btn-default
                    span.icon.icon-chart-area 
                      a(use xlink:href='views/templates/interactions.jade')
                        | Interactions

                  button.nav-group-item.btn.btn-large.btn-default
                    span.icon.icon-clock 
                      a(use xlink:href='views/templates/attendance.jade')
                        | Attendance

                  button.nav-group-item.btn.btn-large.btn-default
                    span.icon.icon-gauge 
                      a(use xlink:href='views/templates/productivity.jade')
                        | Productivity

                  button.nav-group-item.btn.btn-large.btn-default
                    span.icon.icon-trophy 
                      a(use xlink:href='views/templates/qpa.jade')
                        | QPA

          block content

    block scripts
        script(type='text/javascript', src='public/js/d3.min.js')
        script(type='text/javascript', src='public/js/c3.min.js')
        script(type='text/javascript', src='public/js/db.js')
